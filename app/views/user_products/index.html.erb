<h1>Your little cart of terror:</h1>

<% @items_in_cart.each do |item| %>
  <h5><%= item.product.name %>: <%= item.product.price_format %></h5>
  <%= link_to("X", "/cart/#{item.id}", method: :delete, class: "btn btn-danger") %>
<% end %>

<% if @items_in_cart.any? %>
  <p>Total price: <%= current_user.total_price_in_cart %></p>
