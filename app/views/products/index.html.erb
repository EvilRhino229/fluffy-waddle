<%= form_tag("/products", method: :get) do %>
<div class="row">
  <div class="col-sm-3">
    <%= label_tag(:category_id, "Search by spookiness level") %>
  </div>
    <div class="col-sm-9">
      <div class="form-group">
  <%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, :name, @category ? @category.id : nil), prompt: "Select a spookiness level") %>
      </div>
      <!-- <div class="col-sm-3"> -->
<%= submit_tag("Search it, my dude", class: "btn btn-light") %>
      </div>
    </div>

<% end %>
<div class="row">
<!-- <%= link_to("Wanna host your own haunted doll? Beep bebeep?", "/products/new") %> -->
  <% @products.each do |product| %>
    <div class="product col-lg-6">
    <figcaption><%= product.name %>
      <%= link_to("/products/#{product.id}") do %>
      <figure>
      <%= image_tag("#{product.image_url}", style: "height: 80%; width: 80%;") %>
      <% end %>
    <p><%= product.price_format %></p>
    <p><%= product.description %></p>
    </figcaption>
  </figure>
    </div>
  <% end %>
</div>