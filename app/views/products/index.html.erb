
<%= form_tag("/products", method: :get) do %>
<div class="row">
  <div class="col-sm-3">
    <%= label_tag(:category_id, "Search by spookiness level") %>
  </div>
    <div class="col-sm-6">
      <div class="form-group">
  <%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, :name, @category ? @category.id : nil), prompt: "Select a spookiness level") %>
      </div>
      <!-- <div class="col-sm-3"> -->
<%= submit_tag("Search it, my dude", class: "btn btn-light") %>
      </div>
    </div>

<% end %>


  <% @products.each do |product| %>
    <div class="col-md-6">
      <%= image_tag("#{product.image_url}", style: "height: 100%; width: 100%;") %>
        <h5><%= product.name %></h5>
        <p><%= product.price_format %></p>
        <%= link_to("View Product", "/products/#{product.id}", class: "btn btn-primary") %>
      </div>
    <% end %>