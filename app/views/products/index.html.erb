<h1><!-- Haunted Doll Watch (beebeedeebeep beep) <%= @category ? "You're searching for #{@category.name} dolls." : "Haunted Doll Watch (beebeedeebeep beep!)" %></h1>-->

<%= form_tag("/products", method: :get) do %>
<div class="row">
  <div class="col-sm-3">
    <%= label_tag(:category_id, "Search by spookiness level") %>
  </div>
    <div class="col-sm-6">
      <div class="form-group">
  <%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, :name, @category ? @category.id : nil), prompt: "Select a spookiness level") %>
      </div>
      <div class="col-sm-3">
<%= submit_tag("Search it, my dude", class: "btn btn-secondary") %>
      </div>
    </div>

<% end %>
<%= link_to("Wanna host your own haunted doll? Beep bebeep?", "/products/new") %>
  <% @products.each do |product| %>
    <h3><%= product.name %></h3>
      <%= link_to("/products/#{product.id}") do %>
      <%= image_tag("#{product.image_url}") %>
      <% end %>
    <p><%= product.price_format %></p>
    <p><%= product.description %></p>
</div>
<% end %>