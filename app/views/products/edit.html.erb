<%= form_tag("/products/#{@product.id}", method: :put) do %>
<%= label_tag(:name, "here, this is a start") %>
  <br>
  <%= text_field_tag(:name, @product.name) %>
  <br>
  <br>
  <%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, :name, @product.category_id)) %>
  <br>
  <br>
  <%= label_tag(:description, "hopefully nobody's already bought your defective product") %>
  <br>
  <%= text_area_tag(:description, @product.description, size: '40x10') %>
  <br>
  <%= label_tag(:image_url, "Enter the URL of whatever picture you took of your decrepit merchandise") %>
  <br>
  <%= text_field_tag(:image_url, @product.image_url) %>
  <br>
  <%= label_tag(:price, "i bet it was here") %>
  <br>
  <%= number_field_tag(:price, @product.price) %>
  <br>
  <%= submit_tag("okay, maybe this will look better") %>
<% end %>